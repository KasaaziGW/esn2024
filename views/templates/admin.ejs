<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Administer User Profile</title>
</head>
<body>
    <!--Use case one-->
  <h1>Administer User Profile</h1>

  <!-- User Profile Form -->
  <form id="userProfileForm">
    <label for="username">Username:</label>
    <input type="text" id="username" name="username" readonly><br><br>

    <label for="accountStatus">Account Status:</label>
    <select id="accountStatus" name="accountStatus">
        <option value="active">Active</option>
        <option value="inactive">Inactive</option>
    </select><br><br>
    <label for="email">Email:</label>
    <input type="email" id="email" name="email" readonly><br><br>

    <label for="priviledge">Priviledge:</label>
    <select id="priviledge" name="role">
      <option value="CitizenUser">User</option>
      <option value="coordinator">Coordinator
      <option value="admin">Administrator</option>
    </select><br><br>

    <label for="password">New password:</label>
    <input type="password" id="password" name="password"><br>

    <button type="submit">Update Profile</button>
  </form>

  <p id="message"></p>
  
  <script src="admin.js"></script>
</body>
</html>
