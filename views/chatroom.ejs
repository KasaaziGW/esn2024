<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('templates/head'); %>
    <title>Chatroom</title>
</head>
<body>
    <%- include('templates/header'); %>
    <main class="d-flex flex-nowrap" style="height:500px;">
        <%- include('templates/nav'); %>
        <div class="d-flex flex-column flex-shrink-0 p-3" style="width: 100%;">
            <div id="content">
                <div id="messages"></div>
                <div id="alert"></div>
                <div class="d-flex bd-highlight" style="width: 81%; border-top: 2px solid rgba(0,0,0,0.1);">
                    <div class="p-2 w-150 bd-highlight" style="width: 100%;"><textarea id="sendMessage" placeholder="Type your message here" required="" style="width: 100%; height: 40px; resize: none; border-radius:15px; padding:5px; margin-left:20px; margin-top: -4px;"></textarea></div>
                    <div class="ms-auto p-2 bd-highlight"><input type="submit" value="Send Message" id="sendButton" style="height: 40px;margin-top: -4px;margin-left: 25px; text-align: left;"></div>
                </div>
            </div>
        </div>
        
    </main>
    <%- include('templates/footer'); %>
    <script src="js/chat.js"></script>
</body>
</html>